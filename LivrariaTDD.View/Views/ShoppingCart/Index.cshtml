      <div class="cart-info">
        <table class="table table-striped table-bordered">
            <tr>
                <th class="image">Foto</th>
                <th class="name">Nome</th>
                <th class="quantity">Qty</th>
                <th class="total">Ações</th>
                <th class="price">Preço Unitário</th>
                <th class="total">Total</th>
           
