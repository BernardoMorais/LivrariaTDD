  <section id="featured" class="row mt40">
    <div class="container">
      <h1 class="heading1"><span class="maintext">Sugestões</span><span class="subtext"></span></h1>
        <ul class="thumbnails">
            @foreach(var product in Model.Products)
            {
                <li class="span3">
                    <a class="prdocutname" href="@Url.Action("Index", "Product", new {product.ProductId})">@product.Name</a>
                    <div class="thumbnail">
                        @if(product.Stock == 0)
                        {
                            <span class="soldout tooltip-test">Esgotado</span>
                        }
                        else
                        {
                            if (product.Sale)
                             {
                                 <span class="sale tooltip-test">Liquidação</span>
                             }
                             else
                             {
                                 if (product.Offer)
                                 {
                                     <span class="offer tooltip-test" >Promoção</span>
                                 }
                             }
                        }
                        <a href="#"><img alt="" class="productimage"  src="@String.Format("Content/Images/Products/{0}", product.Photo ?? "noImage.jpg")"></a>
                        <div class="shortlinks">
                            <a class="details" href="@Url.Action("Edit","Admin", new { productId = product.ProductId })">Editar</a>
                            <a class="delete" href="@Url.Action("Desactive","Admin", new { productId = product.ProductId })">Desativar</a>
                            @*<a class="compare" href="#">COMPARE</a>*@
                        </div>
                        <div class="pricetag">
                            <span class="spiral"></span>
                            @if(product.Stock == 0)
                            {
                                <a href="@Url.Action("Edit","Admin", new { productId = product.ProductId })" class="changestock">Alterar Estoque</a>
                            }
                            else if(product.Status == ProductStatus.Inative)
                            {
                                <a href="@Url.Action("Active","Admin", new { productId = product.ProductId })" class="activeproduct">Reativar Produto</a>
                            }
                            else
                            {
                                <a href="#" class="productcart">Adicionar ao Carrinho</a>
                            }
                            <div class="price">
                                <div class="pricenew">@product.Price</div>
                                @if(product.PriceOld != 0)
                                {
                                    <div class="priceold">@product.PriceOld</div>
                                }
                            </div>
                        </div>
                    </div>
                </li>
            }
